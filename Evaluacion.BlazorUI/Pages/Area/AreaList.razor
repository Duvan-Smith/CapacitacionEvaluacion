@page "/arealist"

<ComTitulo Titulo="Lista de areas"></ComTitulo>
<br />
<MatPaper Elevation="6">

    <ComSubBarra Tipo="save" Url="/areaform" Etiqueta="Agregar area">
    </ComSubBarra>
    <div style="height:100px; max-height:500px; min-height:500px; overflow-y:scroll">

        @if (Areas == null)
        {
            <ComLoading>
            </ComLoading>
        }
        else
        {
            <ComTabla Areas="@Areas" UrlEditar="@UrlEditar" SelecionarId="@IdTablaComportamiento" SelecionarUrl="@UrlTablaComportamiento"></ComTabla>
        }
    </div>
</MatPaper>